NAME = ft_ping

SUBDIR = libft

HEADERS = ping.h

CC = cc

SRCS =	src/main.c \
		src/packet.c \
		src/utils.c \
		src/validation.c 

CFLAGS = -Wall -Wextra -Werror

OBJS = $(SRCS:.c=.o)

all: $(NAME) $(NAME)

$(NAME): $(OBJS) $(HEADERS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean:	clean
	rm -f $(NAME)

re: fclean all

